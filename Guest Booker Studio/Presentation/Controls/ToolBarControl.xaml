<dock:DockableContent x:Class="Guest_Booker_Studio.Presentation.Controls.ToolBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:dock="clr-namespace:AvalonDock;assembly=AvalonDock"
             xmlns:c="clr-namespace:Guest_Booker_Studio.Commands"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ToolBarPanel Grid.Row="1" Margin="0" Background="#FFF">
        <ToolBar Margin="0" Background="#FFF" BorderBrush="#EEE" ToolTip="Guest Booker Studio Commands">
            <Button Command="c:WindowCommands.ShowCustomerExplorer" ToolTip="Show Customer Explorer">
                <Image Source="/Presentation/Resources/Images/Search24.png" VerticalAlignment="Center" Height="14" Width="14" ToolTip="Open XAML"></Image>
            </Button>
          
            <Button ToolTip="Show Start Page" Command="c:WindowCommands.ShowStartPage">
                <Image Source="/Presentation/Resources/Images/Star_full24.png" VerticalAlignment="Center" Height="18" Width="18"></Image>
            </Button>
            <Separator Margin="5" />
            
        </ToolBar>
    </ToolBarPanel>
</dock:DockableContent>
